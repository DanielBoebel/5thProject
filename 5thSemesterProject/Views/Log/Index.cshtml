@model PagedList.IPagedList<_5thSemesterProject.Models.Log>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.ActionLink("Employee_name", "Index", new { sortOrder = ViewBag.UsernameSortParm, currentFilter = ViewBag.CurrentFilter })
		</th>
		<th>
			@Html.ActionLink("Timestamp", "Index", new { sortOrder = ViewBag.TimestampSortParm, currentFilter = ViewBag.CurrentFilter })
		</th>
		<th>
			@Html.Label("Actions")
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.employee_name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.action)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.timestamp)
			</td>
		</tr>
	}

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
	new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
<div>
	@Html.ActionLink("Back to List", "../Users")
</div>
