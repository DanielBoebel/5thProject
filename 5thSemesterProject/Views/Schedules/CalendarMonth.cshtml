<!DOCTYPE html>
@{
    ViewBag.Title = "CalendarMonth";
}


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Calendar</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/CSS/CalendarMonth.css">
</head>
<body>
    <div class="text-center" style="background-color: #059ee8;font-size: 22px;">
        <div class="container" style="background-color: rgba(5,158,232,0);">
            <div class="row">
                <div class="col-md-12">
                    <label class="col-form-label text-center" style="color: rgb(255,255,255);">Kalender</label>
                </div>
            </div>
        </div>
    </div>
    <div class="card text-center d-flex d-sm-flex justify-content-center justify-content-sm-center" style="background-color: #ffffff;">
        <div class="card-header" style="background-color: #ffffff;">
            <ul class="nav nav-tabs card-header-tabs text-center" style="margin: 0px -4px -12px;">
                <li class="nav-item"><a class="nav-link active" id="month" style="color: rgb(255,255,255);background-color: rgb(5,158,232);">@Html.ActionLink("Måned", "CalendarMonth")</a></li>
                <li class="nav-item"><a class="nav-link active" style="color: #059ee8;background-color: #ffffff;">@Html.ActionLink("Uge", "CalendarWeek")</a></li>
                <li class="nav-item"><a class="nav-link active" id="day" style="color: rgb(255,255,255);background-color: #059ee8;">@Html.ActionLink("Dag", "CalendarDay")</a></li>
            </ul>
        </div>
    </div>
    <div class="card" style="background-color: #ffffff;">
        <div class="card-header text-center" style="background-color: #ffffff;">
            <div class="btn-toolbar" style="padding: 0;margin: 0;">
                <div class="btn-group btn-group-sm" role="group" style="padding: 0;margin: 0;height: 36px;font-size: 12px;">
                    <button class="btn btn-primary border rounded" type="button" id="prevMonth">Forrige måned</button>
                    <button class="btn btn-primary border rounded" type="button" id="currentMonth" style="margin: 0px 10px 0px 10px;">Denne måned</button>
                    <button class="btn btn-primary border rounded" id="nxtMonth" type="button" ;>
                        Næste måned
                    </button>
                    <button class="btn btn-secondary border rounded" type="button" disabled="disabled" id="showingMonth" style="margin: 0px 0px 0px 10px;">Maj</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table" id="monthTable">
                <thead>
                    <tr>
                        <th>Uge</th>
                        <th>Man</th>
                        <th>Tirs</th>
                        <th>Ons</th>
                        <th>Tors</th>
                        <th>Fre</th>
                        <th>Lør</th>
                        <th>Søn</th>
                    </tr>
                </thead>
                <tbody>
                    <tr id="weekCell">
                        <td>1</td>
                        <td>Cell 1</td>
                        <td>Cell 2</td>
                        <td>Cell 2</td>
                        <td>Cell 2</td>
                        <td>Cell 2</td>
                        <td>Cell 6</td>
                        <td>Cell 6</td>
                    </tr>
                    <tr id="mondayCell" s>
                        <td>2</td>
                        <td>Cell 3</td>
                        <td>Cell 2</td>
                        <td>Cell 2</td>
                        <td>Cell 2</td>
                        <td>Cell 4</td>
                        <td>Cell 6</td>
                        <td>Cell 6</td>
                    </tr>
                    <tr id="tuesdayCell">
                        <td>Cell 1</td>
                        <td>Cell 2</td>
                        <td>Cell 3</td>
                        <td>Cell 4</td>
                        <td>Cell 5</td>
                        <td>Cell 6</td>
                        <td>Cell 7</td>
                        <td>Cell 8</td>
                    </tr>
                    <tr>
                        <td>Cell 1</td>
                        <td>Cell 2</td>
                        <td>Cell 3</td>
                        <td>Cell 4</td>
                        <td>Cell 5</td>
                        <td>Cell 6</td>
                        <td>Cell 7</td>
                        <td>Cell 8</td>
                    </tr>
                    <tr>
                        <td>Cell 1</td>
                        <td>Cell 2</td>
                        <td>Cell 3</td>
                        <td>Cell 4</td>
                        <td>Cell 5</td>
                        <td>Cell 6</td>
                        <td>Cell 7</td>
                        <td>Cell 8</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>*@
    <!--<script type="text/javascript" src="js/script.js"></script>-->
</body>

</html>


